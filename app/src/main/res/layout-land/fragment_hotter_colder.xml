<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_below="@+id/ScoreLayout"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/HotterColder_currentPlayerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Current Player"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3b1f1f"/>

        <TextView
            android:id="@+id/HotterColder_numberOfGuessesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Number of Guesses"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3b1f1f"/>


        <TextView
            android:id="@+id/HotterColder_guessANumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Guess a Number Between 1-10"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#080808"/>

        <EditText
            android:id="@+id/HotterColder_guessANumEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:hint="Enter a Number"
            android:inputType="number"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/HotterColder_GuessButton"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="GUESS"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/buttonshape"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/HotterColder_NewGameButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="NEW GAME"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/buttonshape"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/HotterColder_ExitButton"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="EXIT"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/buttonshape"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>